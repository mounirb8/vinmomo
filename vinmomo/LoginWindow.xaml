<Window x:Class="vinmomo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion"
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Annuaire d'entreprise"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- IDENTIFIANT -->
        <StackPanel Grid.Row="1" Margin="0 10">
            <TextBlock Text="Identifiant :" />
            <TextBox x:Name="TxtLogin" />
        </StackPanel>

        <!-- MOT DE PASSE -->
        <StackPanel Grid.Row="2" Margin="0 10">
            <TextBlock Text="Mot de passe :" />
            <PasswordBox x:Name="TxtPassword"/>
        </StackPanel>

        <!-- BOUTONS -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 0">

            <Button Content="Connexion admin"
                    Width="150"
                    Margin="0 0 10 0"
                    Click="BtnConnexionAdmin_Click"/>

            <Button Content="Accès lecture seule"
                    Width="150"
                    Click="BtnLectureSeule_Click"/>
        </StackPanel>

        <!-- MESSAGE ERREUR -->
        <TextBlock x:Name="LblError"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0 10"/>
    </Grid>
</Window>
