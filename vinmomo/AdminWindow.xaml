<Window x:Class="vinmomo.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vinmomo"
        xmlns:viewModels="clr-namespace:vinmomo.ViewModels"
        mc:Ignorable="d"
        Title="Administration" Height="600" Width="800">
    <TabControl>
        <!-- Sites Tab -->
        <TabItem Header="Sites">
            <TabItem.DataContext>
                <viewModels:AdminSitesViewModel/>
            </TabItem.DataContext>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" ItemsSource="{Binding Sites}" x:Name="SitesListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Ville" DisplayMemberBinding="{Binding Ville}" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Add" Command="{Binding AddSiteCommand}" Width="75" Margin="5"/>
                    <Button Content="Update" Command="{Binding UpdateSiteCommand}" CommandParameter="{Binding ElementName=SitesListView, Path=SelectedItem}" Width="75" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteSiteCommand}" CommandParameter="{Binding ElementName=SitesListView, Path=SelectedItem}" Width="75" Margin="5"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- Services Tab -->
        <TabItem Header="Services">
            <TabItem.DataContext>
                <viewModels:AdminServicesViewModel/>
            </TabItem.DataContext>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" ItemsSource="{Binding Services}" x:Name="ServicesListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Add" Command="{Binding AddServiceCommand}" Width="75" Margin="5"/>
                    <Button Content="Update" Command="{Binding UpdateServiceCommand}" CommandParameter="{Binding ElementName=ServicesListView, Path=SelectedItem}" Width="75" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteServiceCommand}" CommandParameter="{Binding ElementName=ServicesListView, Path=SelectedItem}" Width="75" Margin="5"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- Salariés Tab -->
        <TabItem Header="Salariés">
            <TabItem.DataContext>
                <viewModels:AdminSalariesViewModel/>
            </TabItem.DataContext>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" ItemsSource="{Binding Salaries}" x:Name="SalariesAdminListView">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" Width="100"/>
                            <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prenom}" Width="100"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="150"/>
                            <GridViewColumn Header="Service" DisplayMemberBinding="{Binding Service.Nom}" Width="120"/>
                            <GridViewColumn Header="Site" DisplayMemberBinding="{Binding Site.Ville}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Add" Command="{Binding AddSalarieCommand}" Width="75" Margin="5"/>
                    <Button Content="Update" Command="{Binding UpdateSalarieCommand}" CommandParameter="{Binding ElementName=SalariesAdminListView, Path=SelectedItem}" Width="75" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteSalarieCommand}" CommandParameter="{Binding ElementName=SalariesAdminListView, Path=SelectedItem}" Width="75" Margin="5"/>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
